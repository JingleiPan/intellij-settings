<templateSet group="sl4j">
  <template name="loginfo" value="LOG.info(&quot;$EXPR_COPY$ = {}&quot;, $EXPR$);" description="Prints a value to LOG.info" toReformat="true" toShortenFQNames="true">
    <variable name="EXPR" expression="variableOfType(&quot;&quot;)" defaultValue="&quot;expr&quot;" alwaysStopAt="true" />
    <variable name="EXPR_COPY" expression="escapeString(EXPR)" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="getlogger" value="private static final org.slf4j.Logger LOG = org.slf4j.LoggerFactory.getLogger($CLASS_NAME$.class);&#10;$END$" description="get logger for current class." toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_NAME" expression="className()" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="JAVA_DECLARATION" value="true" />
    </context>
  </template>
  <template name="logdebug" value="if(LOG.isDebugEnabled()){&#10;    LOG.debug(&quot;$EXPR_COPY$ = {}&quot;, $EXPR$);&#10;}&#10;$END$" description="Prints a value to LOG.debug" toReformat="true" toShortenFQNames="true">
    <variable name="EXPR" expression="variableOfType(&quot;&quot;)" defaultValue="&quot;expr&quot;" alwaysStopAt="true" />
    <variable name="EXPR_COPY" expression="escapeString(EXPR)" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="logip" value="LOG.info($FORMAT$);$END$" description="" toReformat="true" toShortenFQNames="true">
    <variable name="FORMAT" expression="groovyScript(&quot;'\&quot;' + _1 + (!_2.isEmpty() ? ' - ' : '') + _2.collect { it + ': {}'}.join(', ') + '\&quot;' + (!_2.isEmpty() ? ', ' + _2.collect {it}.join(', ') : '')&quot;, methodName(), methodParameters())" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="JAVA_EXPRESSION" value="true" />
    </context>
  </template>
</templateSet>